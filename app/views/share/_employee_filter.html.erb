<div id="employeefilter" class="editform">
  <%= target %>
  <% fieldset_form_for(@employee, :url => '/query/employees') do |f| %>
    <%= f.legend I18n.t('employeefilter_title') %>
    <%= f.text_field :license_number %>
    <%= f.text_field :employee_number %>
    <%= f.text_field :name %>
    <%= f.text_field :id_card_number %>
    <%= f.text_field :height %>
    <%= f.text_field :phone_number %>
    <%= f.text_field :mobile_number %>
    <%= f.select :gender_id, Resource.lookup_ids(:gender), { :include_blank => true } %>
    <%= f.select :political_status_id, Resource.lookup_ids(:political_status), { :include_blank => true } %>
    <%= f.select :educational_attainments_id, Resource.lookup_ids(:educational_attainments), { :include_blank => true } %>
    <%= f.select :person_type_id, Resource.lookup_ids(:person_type), { :include_blank => true } %>
    <%= f.check_box :is_demobilized %>
    <%= f.text_field :permanent_residence %>
    <%= f.select :employee_type_id, Resource.lookup_ids(:employee_type), { :include_blank => true } %>
    <%= f.text_field :home_address %>
    <%= f.select :fund_type_id, Resource.lookup_ids(:fund_type), { :include_blank => true } %>
    <%= f.select :fund_address_id, Resource.lookup_ids(:fund_address), { :include_blank => true } %>
    <%= f.select :training_status_id, Resource.lookup_ids(:training_status), { :include_blank => true } %>
    <%= f.text_field :remarks %>
    <%= f.submit I18n.t('button_Query') %>
  <% end %>
</div>
<div class="wrap">
  <h2><%= I18n.t(page_title) %></h2>
  <%= error_messages_for :employee, :photo %>
  <div class="editform">
    <% form_for(@employee, :url => { :action => "upload", :id => @employee.id }, :html => { :multipart => true }) do |f| %>
      <p>
        <%= photo_for(@employee) %><br/>
        <%= file_field_tag :photo_file %>
        <%= f.submit I18n.t("button_Save") if @is_editable%>
      </p>
    <% end %>
  </div>
</div>
<div class="wrap">
  <h2>驻点合同列表</h2>
  
  名称:<%=h @site.name %>
  联系方式:<%=h @site.contacts %>
  地址:<%=h @site.address %>
  <br/><br/>
  
  <table class="listform">
    <tbody>
      <tr class="head">
        <th>序号</th>
        <th>到期日期</th>
        <th>额定人数</th>
        <th colspan="3">操作</th>
      </tr>
    </tbody>
    <tbody>
      <% for site_contract in @site_contracts %>
        <tr class="alternate"> 
          <td><%=h site_contract.id %></td>
          <td><%=h site_contract.contract_end_date.strftime("%Y年%m月%d日") %></td>
          <td><%=h site_contract.quantity %></td>
        <td><%= link_to I18n.t("button_Edit"), edit_site_contract_path(site_contract) %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <p class="submit">
    <%= link_to '创建合同', { :controller => 'site_contracts', :action => 'new', :site_id => @site.id } %>
  </p>
</div>

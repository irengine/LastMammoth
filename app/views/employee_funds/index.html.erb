<div class="wrap">
  <h2>缴金记录</h2>
  
  姓名:<%=h @employee.name %>
  身份证:<%=h @employee.id_card_number %>
  工号:<%=h @employee.employee_number %>
  <br/><br/>
  
  <table class="listform">
    <tbody>
      <tr class="head">
        <th>序号</th>
        <th>缴金日期</th>
        <th>缴金类型</th>
        <th>缴金街道</th>
        <th colspan="3">操作</th>
      </tr>
    </tbody>
    <tbody>
      <% for employee_fund in @employee_funds %>
        <tr class="alternate"> 
          <td><%=h employee_fund.id %></td>
          <td><%=h employee_fund.fund_date.strftime("%Y年%m月%d日") %></td>
          <td><%=h employee_fund.fund_type.value %></td>
          <td><%=h employee_fund.fund_address.value %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <p class="submit">
    <%= link_to '缴金记录', { :controller => 'employee_funds', :action => 'new', :employee_id => @employee.id } %>
  </p>
</div>

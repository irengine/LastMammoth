<div class="wrap">
  <h2><%= I18n.t(page_title) %></h2>
  <%= error_messages_for :user %>
  <div class="editform">
    <% tabular_form_for(@user) do |f| %>
      <%= f.select :default_group_id, @parent_groups.collect {|g| [ g.name, g.id ] } %>
      <%= f.text_field :name %>
      <%= f.text_field :full_name %>
      <%= f.text_field :email %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit I18n.t("button_Save") %>
    <% end %>
  </div>
</div>
